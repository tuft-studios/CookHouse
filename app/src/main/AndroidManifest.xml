<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atta.cookhouse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cook_house_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cook_house_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".favorites.FavoritesActivity"
            android:parentActivityName=".main.MainActivity"></activity>
        <activity android:name=".MyOrdersActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Register.RegisterActivity"
            android:parentActivityName=".login.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cart.CartActivity"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".SettingActivity"
            android:label="Setting"
            android:parentActivityName=".main.MainActivity" />
    </application>

</manifest>